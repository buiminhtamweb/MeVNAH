<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/llLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padding8"
        android:paddingLeft="@dimen/icon16"
        android:paddingRight="@dimen/icon16"
        android:paddingTop="@dimen/padding8">


        <ImageView
            android:id="@+id/imgLocation"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/padding15"
            android:background="#000"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                style="@style/tvBlack14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Name"
                android:textStyle="bold"
                android:textColor="#4A4A4A"
                />

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/radius3"
                android:ellipsize="end"
                android:layout_marginLeft="10dp"
                android:maxLines="2"
                android:text="Description"
                android:textSize="@dimen/size12"/>

            <TextView
                android:id="@+id/tvLatng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/radius3"
                android:ellipsize="end"
                android:textColor="#1f84e9"
                android:layout_marginLeft="10dp"
                android:maxLines="2"
                android:text="Description"
                android:textSize="@dimen/size12"
                />
            <TextView
                android:id="@+id/mota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/radius3"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Description"
                android:textSize="@dimen/size12"
                />
        </LinearLayout>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/padding15"
            app:srcCompat="@drawable/send" />
    </LinearLayout>

    <TextView
        android:layout_marginLeft="24dp"
        android:layout_marginTop="6dp"
        android:background="@color/grey"
        android:layout_below="@+id/llLocation"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
</RelativeLayout>
